<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TonShop</title>
    <link href="/css/navagativeBarmini.css" type="text/css" rel="stylesheet">
    <link href="/css/ShopPage.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="container">
            <h1>TonShop</h1>
            <nav>
                <ul>
                    <div class="header">
                    <li>
                        <form action="/products" method="get">
                            <select name="products" id="products" onchange="redirectToProduct()">
                                <option value="shirt">shirt</option>
                                <option value="coat">coat</option>
                                <option value="pants">pants</option>
                                <option value="hat">hat</option>
                                <option value="watch">watch</option>
                                <option value="shoes">shoes</option>
                                <option value="bag">bag</option>
                                <option value="outfit">outfit</option>
                                <option value="dress">dress</option>
                            </select>
                        </form>
                    </li>
                    <li><a href="/oderManagement"><i class="fa-solid fa-truck"></i></a></li>
                </div>

                </ul>
            </nav>
        </div>
    </header>

    <script>
        function redirectToProduct() {
            var selectedType = document.getElementById("products").value;
            window.location.href = "/products/" + selectedType;
        }
    </script>

    <!-- Main Content -->
    <main>
        <div class="container">
            <!-- Banner -->
            <section class="banner">
                <div class="banner-inner">
              </div>
            </section>

            <!-- Product Section -->
            <section class="products">
                <h2>Sản Phẩm Mới Nhất</h2>
                <div class="product-list">
                    <% productList.forEach(product => { %>
                        <div class="product">
                            <% if (product.image && product.image.data) { %>
                                <img src="data:<%= product.image.contentType %>;base64, <%= product.image.data.toString('base64') %>" alt="<%= product.name %>">
                            <% } else { %>
                                <img src="/default-placeholder.jpg" alt="Default Image">
                            <% } %>
                            <h3><%= product.name %></h3>
                            <p><%= product.price %> VND</p>
                            <form action="/theProduct/<%= product._id %>" method="get">
                                <button type="submit">Thông tin sản phẩm</button>
                            </form>
                        </div>
                    <% }); %>
                    
            </section>
        </div>
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2024 TonShop. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
