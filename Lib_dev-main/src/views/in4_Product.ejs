<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Detail</title>
    <link href="/css/in4Product.css" type="text/css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/notifacation.css">

</head>
<body>
    <% if (typeof messages !== 'undefined' && messages.error) { %>
        <div class="notification error-notification">
            <%= messages.error %>
        </div>
    <% } %>
    <% if (typeof messages !== 'undefined' && messages.success) { %>
        <div class="notification success-notification">
            <%= messages.success %>
        </div>
    <% } %>
    <div class="product-container">
        <div class="product-content">
            <div class="product-image">
                <div class="main-image">
                    <img src="<%= image %>" alt="<%= name %>">
                </div>
            </div>
            <div class="product-details">
                <h1><%= name %></h1>
                <h2><%= userName %></h2>
                <p class="product-price"><%= price %> VND</p>
                <div class="product-rating">
                    <span class="rating"><%= avgRate %></span>
                </div>
                <div class="product-description">
                    <p>(<%= quanlity %>)</p>
                    <p><%= describe %></p>
                </div>
                <form action="/Product/Buy/<%= _id %>" method="get">
                    <button class="command-to-cart-button">buy now </button>
                </form>
                <form action="/Product/Rate/<%= _id %>" method="get">
                    <button class="command-to-cart-button">Rate</button>
                </form>
            </div>
            </form> <!-- Closing the form -->
        </div>
    </div>

    <!-- The Modal -->
  
    <script src="/js/buyFunction.js"></script>

    <div class="comment-container">
        <% if (!comments || comments.length === 0) { %>
            <p>No comments yet. Be the first to comment!</p>
        <% } else { %>
            <% comments.forEach(function(comment) { %>
                <div class="comment">
                    <i class="fas fa-user"></i> <!-- Changed to appropriate Font Awesome icon class -->
                    <span><%= comment.userName %></span>
                    <p><%= comment.comment %></p>
                </div>
            <% }); %>
        <% } %>
    </div>
</body>
</html>
