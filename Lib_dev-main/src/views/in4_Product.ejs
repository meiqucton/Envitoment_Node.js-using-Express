<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Detail</title>
    <link href="/css/in4Product.css" type="text/css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="product-container">
        <div class="product-container">
            <div class="product-image">
                <div class="main-image">
                    <img src="<%= image %>" alt="<%= name %>">
                </div>
            </div>
            <div class="product-details">
                <h1> <%= name %> </h1>
                <h2> <%= userName %> </h2>
                <p class="product-price"><%= price %> VND</p>
                <div class="product-rating">
                    <span class="rating"><%= avgRate %></span>
                </div>
                <div class="product-description">
                    <p><%= describe %></p>
                </div>
                <div class="product-options">
                    <label for="quantity">Quantity:</label>
                    <input type="number" id="quantity" name="quantity" min="1" max="10" value="1">
                    <select name="size" id="Size" required>
                        <option value="m">m</option>
                        <option value="x">x</option>
                        <option value="xx">xx</option>
                        <option value="xxl">xxl</option>
                    </select>
                </div>
                <button class="buy-button">Buy Now</button>
                <button class="add-to-cart-button">Add to Cart</button>
                <form action="/Product/Rate/<%= _id %>" method="get">
                    <button class="command-to-cart-button">Rate</button>
                </form>
            </div>
        </div>
    </div>
    <div class="comment-container">
        <% if (!comments || comments.length === 0) { %>
            <p>No comments yet. Be the first to comment!</p>
        <% } else { %>
            <% comments.forEach(function(comment) { %>
                <div>
                    <i class="fa-solid fa-user"></i>
                    <i><%= comment.userName %></i>
                    <p><%= comment.comment %></p>
                </div>
            <% }); %>
        <% } %>
    </div>
    
    
</body>
</html>
