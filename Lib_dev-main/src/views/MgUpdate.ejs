<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/update.css" type="text/css">
    <link href="/css/notifacation.css " type="text/css" rel="stylesheet">
    <title>Update Book</title>
</head>
<body>
    <h1>Update Book</h1>
    <% if (typeof messages !== 'undefined' && messages.error) { %>
        <div class="notification error-notification">
            <%= messages.error %>
        </div>
    <% } %>
    <% if (typeof messages !== 'undefined' && messages.success) { %>
        <div class="notification success-notification">
            <%= messages.success %>
        </div>
    <% } %>

    <form action="/book/<%= Book_id %>" method="POST">
        <label for="BookTitle">Book Title</label>
        <input type="text" name="BookTitle" id="BookTitle" value="<%= BookTitle %>">
        <label for="Author">Author</label>
        <input type="text" name="Author" id="Author" value="<%= Author %>">
        <label for="Year">Year</label>
        <input type="date" name="Year" id="Year" value="<%= Year %>">
        <label for="About">About</label>
        <input type="text" name="About" id="About" value="<%= About %>">
        <label for="Address">Address</label>
        <input type="text" name="Address" id="Address" value="<%= Address %>">
        <button type="submit">Update</button>
    </form>
</body>
</html>
