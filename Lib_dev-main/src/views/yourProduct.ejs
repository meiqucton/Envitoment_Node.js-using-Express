<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Oder</title>
    <link rel="stylesheet" href="/css/Warehourse.css" type="text/css">
    <link href="/css/notifacation.css " type="text/css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>
    <% if (typeof messages !== 'undefined' && messages.error) { %>
        <div class="notification error-notification">
            <%= messages.error %>
        </div>
    <% } %>
    <% if (typeof messages !== 'undefined' && messages.success) { %>
        <div class="notification success-notification">
            <%= messages.success %>
        </div>
    <% } %>
    <h1>Your Oder</h1>
    <div class="yours-container">
        <% if (theYourProducts && theYourProducts.length > 0) { %>
            <ul class="warehouse-list">
                <% theYourProducts.forEach(order => { %>
                    <li class="warehouse-card">
                        <h2>Id: <%= order._id %></h2>
                        <p><strong>User Name:</strong> <%= order.name_user %></p>
                        <p><strong>Product Name:</strong> <%= order.product_name %></p>
                        <p><strong>Size:</strong> <%= order.size %></p>
                        <p><strong>Quantity:</strong> <%= order.quanlity %></p>
                        <p><strong>Address:</strong> <%= order.Address.country %> - 
                            <%= order.Address.city %> - 
                            <%= order.Address.conscious %> - 
                            <%= order.Address.stressName %>
                        </p>
                        <p><strong>Phone:</strong> <%= order.Address.phoneNumber %></p>
                        <p><strong>Total Price: </strong><%= order.total_amount %> ( VND )</p>
                        <p><strong>Date:</strong> <%= order.orderDate %></p>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p class="no-warehouses">No warehouses found.</p>
        <% } %>   
    </div>

</body>
</html>